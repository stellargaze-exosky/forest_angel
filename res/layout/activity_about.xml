<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:background="@drawable/material_gradient3"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/showAppIconHelp"/>

    <TextView
        android:id="@+id/showAppNameHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showAppIconHelp"
        android:layout_marginTop="10dp"
        android:text="Forest Tracker"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="10pt" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showAppNameHelp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="#FFF"
                android:textSize="8pt"
                android:layout_marginStart="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginTop="15pt"
                android:text="@string/intro_text_1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="#FFF"
                android:textSize="8pt"
                android:layout_marginStart="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginTop="5dp"
                android:text="@string/intro_text2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="#FFF"
                android:textSize="8pt"
                android:layout_marginStart="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginTop="5dp"
                android:text="@string/intro_text3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="#FFF"
                android:textSize="8pt"
                android:layout_marginStart="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginTop="5dp"
                android:text="@string/intro_text4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="#FFF"
                android:textSize="8pt"
                android:layout_marginStart="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginTop="5dp"
                android:text="@string/intro_text5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="#FFF"
                android:textSize="8pt"
                android:layout_marginStart="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginTop="5dp"
                android:text="@string/intro_text6"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="#FFF"
                android:textSize="8pt"
                android:layout_marginStart="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginTop="5dp"
                android:text="@string/intro_text7"/>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>